<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplicationcarhub">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="CarHub"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplicationCarHub">
        <activity
            android:name=".Agera"
            android:label="Agera"
            android:theme="@style/Theme.MyApplicationCarHub.NoActionBar"></activity>
        <activity
            android:name=".Segg"
            android:label="Koenigsegg"
            android:theme="@style/Theme.MyApplicationCarHub.NoActionBar" />
        <activity
            android:name=".Veyron"
            android:label="Veyron"
            android:theme="@style/Theme.MyApplicationCarHub.NoActionBar" />
        <activity
            android:name=".Bugatti"
            android:label="Bugatti"
            android:theme="@style/Theme.MyApplicationCarHub.NoActionBar" />
        <activity
            android:name=".ScrollingActivity"
            android:label="CarHub"
            android:theme="@style/Theme.MyApplicationCarHub.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>